<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Консольный аппендер -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!-- Фильтрация чувствительных данных -->
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator>
                <expression>return message.contains("password") || message.contains("token");</expression>
            </evaluator>
            <onMatch>DENY</onMatch>
        </filter>

        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %highlight(%-5level) [%thread] %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Файловый аппендер в формате JSON -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${user.dir}/logs/myapp.json</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${user.dir}/logs/myapp.%d{yyyy-MM-dd}.%i.json.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <charset>UTF-8</charset>
            <customFields>{"application":"test1"}</customFields>
            <timeZone>Europe/Moscow</timeZone>
            <includeContext>false</includeContext>
            <includeMdc>true</includeMdc>
            <lineSeparator>UNIX</lineSeparator>
        </encoder>
    </appender>

    <!-- Асинхронный аппендер для JSON -->
    <appender name="ASYNC_JSON" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="JSON_FILE" />
        <queueSize>512</queueSize> <!-- Размер буфера -->
        <discardingThreshold>0</discardingThreshold> <!-- Когда начинать отбрасывать логи -->
        <neverBlock>true</neverBlock> <!-- Не блокировать при полном буфере -->
        <maxFlushTime>5000</maxFlushTime> <!-- Макс. время ожидания записи (мс) -->
    </appender>

    <!-- Уровни логирования -->
    <logger name="ru.mymsoft" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="ASYNC_JSON" />
    </logger>
    <root level="WARN">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>